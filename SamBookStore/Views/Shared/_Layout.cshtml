<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        a {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
        }

        .navbar-nav.ml-auto {
            margin-left: auto !important;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#"> Book Store</a>

       
        @if (User.Identity.IsAuthenticated==false)
        {
            <ul class="navbar-nav ml-auto">
                <!-- Separate ul element for Sign Up and Log In -->
            <li class="nav-item">
                <a href="/ACCount/Signup" class="nav-link">Sign Up</a>
            </li>
            <li class="nav-item">
                <a href="/ACCount/Login" class="nav-link">Log In</a>
            </li>
            </ul>
        }else{
            @if (User.IsInRole("Admin"))
            {
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a href="/Genre/Add" class="nav-link">Genre</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Author/Add" class="nav-link">Author</a>
                    </li>
                    <li class="nav-item active">
                        <a href="/Publisher/Add" class="nav-link">Publisher</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Book/Add" class="nav-link">Book</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">

            
                <li class="nav-item">
                    <label class="nav-link">@User.Identity.Name</label>
                </li>
                     <li class="nav-item">
                    <a href="/ACCount/Logout" class="nav-link">Logout</a>
                    </li>
            </ul>
            }else{
                <ul class="navbar-nav mr-auto">
                   
                    <li class="nav-item">
                        <a href="/Book/GetAll" class="nav-link">Book</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">


                    <li class="nav-item">
                        <label class="nav-link">@User.Identity.Name</label>
                    </li>
                    <li class="nav-item">
                        <a href="/ACCount/Logout" class="nav-link">Logout</a>
                    </li>
                </ul>
            }
        }
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
